<script>
// ===== GOOGLE LOGIN =====
function handleCredentialResponse(response){
const jwt = response.credential;
const payload = JSON.parse(atob(jwt.split('.')[1]));
localStorage.setItem('user',JSON.stringify({name:payload.name,email:payload.email,picture:payload.picture,token:jwt}));
showLoading();
}
function showLoading(){
document.getElementById('login-container').classList.add('fade-out');
setTimeout(()=>{
document.getElementById('login-container').style.display='none';
document.getElementById('loading').style.display='block';
setTimeout(()=>{
document.getElementById('loading').style.display='none';
showHome();
},2500);
},500);
}
function showHome(){
const user = JSON.parse(localStorage.getItem('user'));
if(user){
document.getElementById('userInfo').innerHTML = `Selamat datang, <strong>${user.name}</strong> (${user.email})`;
}
document.getElementById('home').style.display='block';
}

// ===== ACCOUNT SETTINGS =====
function logout(){ localStorage.removeItem('user'); localStorage.removeItem('upgradeTier'); location.reload();}
function editName(){const u=JSON.parse(localStorage.getItem('user'));let n=prompt("Masukkan nama baru:",u.name); if(n&&n.trim()!==""){u.name=n.trim();localStorage.setItem('user',JSON.stringify(u));showHome();}}

// ===== UPGRADE SYSTEM =====
window.addEventListener("load",()=>{const t=localStorage.getItem("upgradeTier")||"free"; updateTags(t);});
function setUpgrade(t){localStorage.setItem("upgradeTier",t);updateTags(t);alert("Berhasil mengaktifkan versi GRATIS!");}
function buyUpgrade(t,p){if(!confirm("Upgrade ke "+t.toUpperCase()+" seharga Rp"+p.toLocaleString()+"?\nPilih OK untuk melanjutkan pembayaran."))return; alert("Pembayaran Berhasil! Tier: "+t.toUpperCase());localStorage.setItem("upgradeTier",t);updateTags(t);}
function updateTags(t){document.getElementById("tag-free").innerHTML="";document.getElementById("tag-high").innerHTML="";document.getElementById("tag-quality").innerHTML="";document.getElementById("tag-pro").innerHTML="";if(t==="free")document.getElementById("tag-free").innerHTML="(Aktif)";if(t==="high")document.getElementById("tag-high").innerHTML="(Aktif)";if(t==="quality")document.getElementById("tag-quality").innerHTML="(Aktif)";if(t==="pro")document.getElementById("tag-pro").innerHTML="(Aktif)";}

// ===== REPORT & BAN SYSTEM =====
function reportUser(targetUser,reason){
const reportData={target:targetUser,reason:reason,time:Date.now()};
localStorage.setItem(`report_${targetUser}`,JSON.stringify(reportData));
localStorage.setItem(`ban_${targetUser}`,Date.now() + 24*60*60*1000);
alert(`Laporan terkirim! User ${targetUser} diblokir 24 jam.`);
}
function checkBan(){
const user = JSON.parse(localStorage.getItem('user'));
if(!user)return;
const banTime = localStorage.getItem(`ban_${user.email}`);
if(!banTime)return;
const remaining = banTime - Date.now();
if(remaining>0){
let hours=Math.floor(remaining/(1000*60*60));
let minutes=Math.floor((remaining%(1000*60*60))/(1000*60));
document.body.innerHTML=`<div style="text-align:center;padding-top:80px;color:white;">
<h1>❌ Akun Anda Diblokir</h1>
<p>Karena pelanggaran: Report pengguna lain.</p>
<h2>⏳ Waktu tersisa: <br>${hours} jam ${minutes} menit</h2>
<p>Akses akan kembali otomatis setelah 24 jam.</p></div>`;
}else{localStorage.removeItem(`ban_${user.email}`);}
}
window.onload=function(){checkBan(); const user=localStorage.getItem('user'); if(user){document.getElementById('login-container').style.display='none'; showHome();}};

</script>
</body>
